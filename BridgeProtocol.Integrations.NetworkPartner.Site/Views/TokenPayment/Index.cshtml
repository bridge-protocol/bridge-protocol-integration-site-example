@model BridgeProtocol.Integrations.NetworkPartner.Site.Models.ViewModels.TokenPaymentViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment with Bridge Passport Example</title>
    <script>
        function requestPayment() {
            var event = new CustomEvent("bridge-protocol-payment-request", {
                detail: {
                    paymentIdentifier: "12345",
                    paymentAmount: 1,
                    paymentAddress: "AMMSokvGVXc6wq4rgt3jZ9DA2m83SXH6mo"
                }
            });
            document.dispatchEvent(event);
        }

        document.addEventListener('bridge-protocol-payment-response', function (data) {
            alert(JSON.stringify(data.detail));
            document.getElementById("bridge_passport_payment_transaction_id").value = data.detail.transactionId;
            document.forms[0].submit();
        });
    </script>
</head>
<body style="background-color: white; font-family:Arial; color:black;">
    <div style="width:100%; text-align:center; margin-top:100px;">
        <form id="bridge_passport_payment_form" method="post" onsubmit="return validateForm()">
            <!-- Required Block -->
            <div id="bridge_passport_payment">
                <input id="bridge_passport_payment_transaction_id" name="BridgePassport_PaymentTransactionId" type="hidden" value="" />
            </div>
            <!-- End Required Block -->
        </form>
        <img src="~/images/bridge_logo_black.png" style="width:150px;" /><br />

        <button onclick="requestPayment();">Request Payment from Bridge Passport</button>
    </div>
</body>
</html>



